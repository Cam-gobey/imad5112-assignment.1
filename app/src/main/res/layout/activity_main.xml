<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foodapp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Meal Suggestions"
            android:textColor="#FFFFFF"
            android:textSize="26dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <EditText
            android:id="@+id/timeofDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#f7f6f2"
            android:elevation="4dp"
            android:hint="Please Enter Time Of Day"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />

        <Button
            android:id="@+id/suggestionButton"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0e62e8"
            android:elevation="4dp"
            android:text="Get Suggestion"
            android:textSize="16dp"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0cf2c0"
            android:text="Reset"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/suggestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Suggestion will be shown here"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>